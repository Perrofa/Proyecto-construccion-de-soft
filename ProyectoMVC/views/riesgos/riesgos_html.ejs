    <div class="container">
      <div class="container px-4 py-5" id="custom-cards">
        <h2 class="pb-2 border-bottom">Riesgos</h2>
    
      <!-- Sección para mostrar y manejar los recuadros de riesgos -->
      <div id="riesgos-container">
        <!-- Aquí se agregarán dinámicamente los recuadros de riesgos -->
      </div>
    
      <!-- Formulario para agregar nuevos riesgos -->
      <form id="nuevo-riesgo-form">
        <div class="mb-3">
          <label for="titulo-riesgo" class="form-label">Título</label>
          <input type="text" class="form-control" id="titulo-riesgo" placeholder="Titulo del riesgo" required>
        </div>
        <div class="mb-3">
          <label for="fecha-riesgo" class="form-label">Proyecto</label>
          <input type="text" class="form-control" id="fecha-riesgo" placeholder="Selecciona el proyecto origen del riesgo" required>
        </div>
        <div class="mb-3">
          <label for="descripcion-riesgo" class="form-label">Descripción</label>
          <textarea class="form-control" id="descripcion-riesgo" rows="3" placeholder="Escribe una breve descripción del riesgo" required></textarea>
        </div>
        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input" id="prioridad-riesgo">
          <label class="form-check-label" for="prioridad-riesgo">Prioridad</label>
        </div>
        <button type="submit" class="btn btn-primary">Agregar Riesgo</button>
      </form>
        </div>
      </form>
