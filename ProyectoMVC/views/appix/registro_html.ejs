  <!DOCTYPE html>
  <html lang="en">
    <%- include('./../head.ejs') %>
    <body>
      <%- include('./../header.ejs') %>
      
      <main class="d-flex flex-nowrap">
        <%- include('./../sidebar.ejs') %>
      
        <div class="container">
          <div class="container px-4 py-5" id="custom-cards">
            <h2 class="pb-2 border-bottom">Registro</h2>
      
            <!-- Formulario para registrar -->
            <form action="/proyectos/registro" method="POST" id="nuevo-proyecto-form">
              <div class="mb-3">
                <label for="titulo" class="form-label">Nombre del proyecto</label>
                <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Escribe el nombre del proyecto" required>
              </div>
              
              <div class="mb-3">
                <label for="descripcion" class="form-label">Descripción del proyecto</label>
                <textarea class="form-control" id="descripcion" name="descripcion" rows="3" placeholder="Escribe una breve descripción del proyecto" required></textarea>
              </div>

              <!-- Calendarios de Fecha Inicio-Fin -->

              <div class="mb-3">
                <label for="inicio" class="form-label">Fecha de inicio</label>
                <input type="date" class="form-control" id="inicio" name="inicio" required>
              </div>
      
              <div class="mb-3">
                <label for="fin" class="form-label">Fecha final</label>
                <input type="date" class="form-control" id="fin" name="fin" required>
              </div>
              
              <!-- Agregar Riesgos a Proyectos -->

              <button type="submit" class="btn btn-primary">Agregar Proyecto</button>
              <button type="button" class="btn btn-secondary" id="addOptionsBtn">Agregar Riesgo</button>
              <div id="optionsContainer" class="mt-3"></div>
              </form>
            </div>
            
            <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

            <script>
            $(document).ready(function(){
              let addCount = 0;
              const maxAdds = 3;
            
              $('#addOptionsBtn').click(function(){
                if (addCount < maxAdds) {
                  $('#optionsContainer').append(`
                    <div class="form-group mb-3">
                      <label for="nombreRiesgo" class="mb-3">Nombre del Riesgo:</label>
                      <input type="text" class="form-control" name="nombreRiesgo" placeholder="Escribe el nombre del riesgo a registrar" required>
                    </div>
                    <div class="form-group mb-3">
                      <label for="descripcionRiesgo" class="mb-3">Descripción del Riesgo:</label>
                      <textarea class="form-control" name="descripcionRiesgo" placeholder="Escribe una breve descripción del riesgo" required></textarea>
                    </div>
                    <div class="form-group mb-3">
                      <label for="nivelRiesgo" class="mb-3">Nivel:</label>
                      <select class="form-control" name="nivelRiesgo" required>
                        <option value="bajo">Bajo</option>
                        <option value="medio">Medio</option>
                        <option value="alto">Alto</option>
                      </select>
                    </div>
                    <div class="form-group mb-3">
                      <label for="idProyecto" class="mb-3">ID Proyecto:</label>
                      <input type="text" class="form-control" placeholder="Selecciona el ID del proyecto" name="idProyecto" required>
                    </div>
                    <div>
                      <button type="submit" class="btn btn-primary mb-3">Registrar</button>
                    </div>
                  `);
                  addCount++;
                } else {
                  alert('Solo puedes registrar tres riesgos a la vez. Por favor, registra los riesgos antes de agregar más.');
                }
              });
            });
            </script>
            
            </body>
            </html>
      </main>
      


      <div class="container">
        <%- include('./../footer.ejs') %>
      </div>

      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
      <%- include('./../script.ejs') %>

      <script>
        var elemento = document.getElementById('riesgos-link');
        elemento.className = 'nav-link active';
      </script>

    </body>
  </html>
